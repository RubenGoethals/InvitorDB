@model IEnumerable<InvitorDB.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h3>Index Events</h3>

<p>
    <partial name="Form_EventsForEvent.cshtml" />
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="/event/index" asp-route-eventSearch="@ViewBag.search" asp-route-sortField="Name"> @Html.DisplayNameFor(model => model.Name) </a>
            </th>
            <th>
                <a asp-page="/event/index" asp-route-eventSearch="@ViewBag.search" asp-route-sortField="Location"> @Html.DisplayNameFor(model => model.Location) </a>
            </th>
            <th>
                <a asp-page="/event/index" asp-route-eventSearch="@ViewBag.search" asp-route-sortField="DateOfEvent"> @Html.DisplayNameFor(model => model.DateOfEvent) </a>
            </th>
            <th>
                <a asp-page="/event/index" asp-route-eventSearch="@ViewBag.search" asp-route-sortField="EndOfRegistration"> @Html.DisplayNameFor(model => model.EndOfRegistration) </a>
            </th>
            <th>
                <a asp-page="/event/index" asp-route-eventSearch="@ViewBag.search" asp-route-sortField="Description"> @Html.DisplayNameFor(model => model.Description) </a>
            </th>
            <th>
                <a asp-page="/event/index" asp-route-eventSearch="@ViewBag.search" asp-route-sortField="EndOfRegistration"> @Html.DisplayNameFor(model => model.MaxPersons) </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfEvent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndOfRegistration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxPersons)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create">Create New</a>
</p>
